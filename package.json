{
  "name": "releaser",
  "version": "0.0.0",
  "description": "Under construction",
  "main": "./lib/src/main.js",
  "types": "./lib/src/main.d.ts",
  "bin": {
    "releaser": "./lib/src/main.js"
  },
  "scripts": {
    "commitmsg": "validate-commit-msg",
    "debug": "DEBUG=* node --require pretty-error/start lib/main.js",
    "mocha": "mocha -r ts-node/register test/**/*.spec.ts",
    "prepublish": "tsc",
    "test": "npm run mocha && npm run tslint",
    "test:coverage": "nyc mocha",
    "test:coverage:generate": "nyc --silent=false mocha",
    "test:coveralls": "nyc report --reporter=text-lcov | coveralls",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "tslint": "tslint -c tslint.json src/**"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "cache": true,
    "silent": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slayerfat/releaser.git"
  },
  "author": "Alejandro Granadillo <slayerfat@gmail.com> (http://slayerfat.com.ve/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/slayerfat/releaser/issues"
  },
  "homepage": "https://github.com/slayerfat/releaser#readme",
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/configstore": "^2.1.1",
    "@types/debug": "0.0.29",
    "@types/inquirer": "0.0.34",
    "@types/meow": "^3.6.2",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.16",
    "@types/semver": "^5.3.31",
    "@types/shelljs": "^0.7.1",
    "@types/winston": "^2.3.1",
    "chai": "^3.5.0",
    "child-process-promise": "^2.2.1",
    "coveralls": "^2.13.1",
    "dirty-chai": "^1.2.2",
    "husky": "^0.13.3",
    "inquirer-test": "^1.0.5",
    "mocha": "^3.3.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^10.3.2",
    "shelljs": "^0.7.7",
    "source-map-support": "^0.4.15",
    "ts-node": "^3.0.2",
    "tslint": "^5.1.0",
    "typescript": "^2.3.2",
    "validate-commit-msg": "^2.12.1"
  },
  "dependencies": {
    "configstore": "^3.0.0",
    "conventional-changelog-core": "^1.9.0",
    "conventional-recommended-bump": "^1.0.0",
    "debug": "^2.6.6",
    "inquirer": "^3.0.6",
    "meow": "^3.7.0",
    "pretty-error": "^2.1.0",
    "read-pkg-up": "^2.0.0",
    "semver": "^5.3.0",
    "winston": "^2.3.1"
  }
}
